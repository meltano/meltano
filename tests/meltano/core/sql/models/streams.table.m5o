{
  version = 1
  sql_table_name = streams
  name = streams_table
  columns {
    id {
      primary_key = true
      hidden = true
      type = int
      sql = "{{table}}.id"
    }
    user_id {
      label = User ID
      hidden = yes
      type = int
      sql = "{{TABLE}}.user_id"
    }
    episode_id {
      label = Episode ID
      hidden = yes
      type = int
      sql = "{{TABLE}}.episode_id"
    }
    day {
      label = day
      description = day
      type = int
      sql = "{{table}}.day"
    }
    month {
      label = month
      description = month
      type = int
      sql = "{{table}}.month"
    }
    year {
      label = year
      description = year
      type = int
      sql = "{{table}}.year"
    }
  }
  timeframes {
    streamed_at {
      label = "Streaming Time"
      sql = "{{table}}.streamed_at"
      type = time
      periods = [
        { name = dow, label = Day (week), part = DOW },
        { name = dom, label = Day (month), part = DAY },
        { name = doy, label = Day (year), part = DOY },
        { name = week, label = Week, part = WEEK },
        { name = month, label = Month, part = MONTH },
        { name = year, label = Year, part = YEAR },
        { name = quarter, label = Quarter, part = QUARTER }
      ]
    }
  }
  aggregates {
    count {
      label = Streams Count
      description = Total Streams Count
      type = count
      sql = "{{table}}.id"
    }
    sum_minutes {
      label = Total Minutes
      description = Total Minutes Watched
      type = sum
      sql = "{{table}}.minutes"
    }
    min_minutes {
      label = Minimum Minutes
      description = Minimum Minutes Watched
      type = min
      sql = "{{table}}.minutes"
    }
    max_minutes {
      label = Maximum Minutes
      description = Maximum Minutes Watched
      type = max
      sql = "{{table}}.minutes"
    }
    count_days {
      label = Stream Days Count
      description = Total Days (used for testing properties defined both as columns and as aggregates)
      type = count
      sql = "{{table}}.day"
    }
  }
}

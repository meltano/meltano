    "type": "object",
    "properties": {
        "setting_name": {
            "description": "The name of the setting that is changing",
            "type": "string",
            "examples": [
                "project_id",
                "send_anonymous_usage_stats"
            ],
            "maxLength": 256
        },
        "changed_from": {
            "description": "The prior value of the setting that is changing",
            "type": ["string", "boolean", "null"],
            "maxLength": 256
        },
        "changed_to": {
            "description": "The new value of the setting that is changing",
            "type": ["string", "boolean", "null"],
            "maxLength": 256
        }
    },
    "required": [
        "setting_name",
        "changed_from",
        "changed_to"
    ],
    "additionalProperties": false
